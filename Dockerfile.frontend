FROM node:11-alpine

LABEL name="ohs_gui"

ARG REACT_APP_INSTRUCTOR_SERVICE_URL
ENV REACT_APP_INSTRUCTOR_SERVICE_URL=$REACT_APP_INSTRUCTOR_SERVICE_URL

ARG REACT_APP_STUDENT_SERVICE_URL
ENV REACT_APP_STUDENT_SERVICE_URL=$REACT_APP_STUDENT_SERVICE_URL

ADD ohs_gui /app

WORKDIR /app

RUN npm install

RUN npm run build

RUN npm install -g serve

EXPOSE 5000

CMD ["serve", "-s", "build"]
